<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginHorizontal="24dp"

    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"

    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/header_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        android:paddingVertical="40dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW FOLDER"
            android:textColor="@color/text_color_alt"
            android:textSize="14sp"
            android:fontFamily="@font/productsans_medium"
            android:letterSpacing="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:elevation="3dp"
            android:background="@drawable/bg_input_pill"
            android:paddingHorizontal="24dp"
            android:paddingVertical="14dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/etFolderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Name"
                android:textColorHint="#9E9E9E"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:fontFamily="@font/productsans_bold"
                android:gravity="center"
                android:singleLine="true"
                android:imeOptions="actionDone"/>
        </FrameLayout>

        <HorizontalScrollView
            android:id="@+id/scrollColors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:paddingHorizontal="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputContainer">

            <LinearLayout
                android:id="@+id/colorContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/scrollColors"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/text_color_alt"
                android:textSize="16sp"
                android:fontFamily="@font/productsans_medium"
                android:padding="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/btnCreate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/productsans_bold"
                android:gravity="center"
                android:background="@drawable/bg_button_rounded"
                android:paddingVertical="14dp"
                android:elevation="2dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>