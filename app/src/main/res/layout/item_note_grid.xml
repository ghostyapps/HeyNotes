<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:minHeight="170dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/toolbar_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 1. HEADER (Colored Background) -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="#BDBDBD">
            <!-- Burası varsayılan gri kalsın, Adapter kodumuz burayı renklendirecek -->

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/productsans_bold"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- 2. BODY (Arkaplan rengi düzeltildi) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/toolbar_background"> <!-- DÜZELTİLEN SATIR -->

            <TextView
                android:id="@+id/tvContentPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body content..."
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:fontFamily="@font/productsans_medium"
                android:lineSpacingExtra="4dp"
                android:maxLines="4"
                android:ellipsize="end" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>