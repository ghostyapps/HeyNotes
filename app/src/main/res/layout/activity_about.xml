<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/header_background">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="68dp"
        android:paddingBottom="24dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:padding="4dp"
                app:tint="@color/text_color"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="32sp"
                android:textColor="@color/text_color"
                android:fontFamily="@font/productsans_bold"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textSize="16sp"
            android:textColor="@color/text_color_alt"
            android:fontFamily="@font/productsans_medium"
            android:layout_marginTop="2dp"
            android:layout_marginStart="48dp"/>

    </LinearLayout>

    <!-- BODY -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_content_card">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- INTRO -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_description"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/productsans_medium"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginBottom="32dp"/>

                <!-- SECURE FOLDERS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Secure Folders"
                    android:textSize="22sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/productsans_bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You can keep your private notes safe inside Secure Folders."
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/productsans_medium"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How to create one?"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/productsans_bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Instructions using Resource String -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secure_instructions"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_alt"
                    android:fontFamily="@font/productsans_medium"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginBottom="24dp"/>

                <!-- WARNING BOX -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_floating_toolbar"
                    android:padding="16dp"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/important_warning"
                        android:textSize="16sp"
                        android:textColor="#D32F2F"
                        android:fontFamily="@font/productsans_bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_privacy_info"
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_medium"
                        android:lineSpacingMultiplier="1.2"/>
                </LinearLayout>

                <!-- FOOTER -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Created with ❤️ by GhostyApps"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_alt"
                    android:fontFamily="@font/productsans_bold"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="48dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/tvGithubLink"/>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>