<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/header_background"
    tools:context=".MainActivity">

    <!-- 1. HEADER SECTION -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="60dp"
        android:paddingBottom="40dp">

        <!-- Header Graphic (Balls) -->
        <ImageView
            android:id="@+id/ivHeaderGraphic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ballsfornotes"
            android:contentDescription="Header Art"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- View Toggle Icon -->
        <ImageView
            android:id="@+id/btnToggleView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_view_grid"
            app:tint="@color/text_color_alt"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- App Title (Name) -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey, User"
            android:textSize="36sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/productsans_black"
            android:layout_marginTop="24dp"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivHeaderGraphic" />

        <!-- Greeting -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good evening."
            android:textSize="36sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/productsans_black"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAppTitle" />

        <!-- Subtitle / Count -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="@color/text_color_alt"
            android:textSize="16sp"
            android:fontFamily="@font/productsans_medium"
            android:layout_marginTop="4dp"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGreeting" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. BODY SECTION (White Card) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_content_card">

        <!-- LİSTELER (Folders + Notes) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- FOLDERS LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFolders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"/>

            <!-- NOTES LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNotes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="88dp" />
        </LinearLayout>

        <!-- 3. FAB OVERLAY (Gölge) -->
        <View
            android:id="@+id/fabOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/header_background"
            android:alpha="0.9"
            android:visibility="gone"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- 4. FAB MENU (Pills) -->
        <LinearLayout
            android:id="@+id/fabMenuContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:visibility="gone"
            android:elevation="12dp"

            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="8dp"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/fabCreate"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- New Folder Pill -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnNewFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/toolbar_background"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/fab_menu_folder"
                        app:tint="@color/text_color"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Folder"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- New Note Pill -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnNewNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/toolbar_background"
                app:cardElevation="4dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/fab_menu_note"
                        app:tint="@color/text_color"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Note"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 5. FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:src="@android:drawable/ic_input_add"
            android:elevation="12dp"
            app:backgroundTint="@color/fab_background"
            app:tint="@color/fab_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>