<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/toolbar_background">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Başlık -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Password"
            android:textSize="22sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/productsans_bold"
            android:layout_marginBottom="8dp" />

        <!-- Açıklama (Sadece kurulumda görünür olacak) -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description goes here..."
            android:textSize="14sp"
            android:textColor="@color/text_color_alt"
            android:fontFamily="@font/productsans_medium"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="24dp"
            android:visibility="gone"/>

        <!-- Şifre Giriş Kutusu (Hap Şeklinde) -->
        <EditText
            android:id="@+id/etPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_floating_toolbar"
            android:hint="PIN"
            android:padding="16dp"
            android:textSize="24sp"
            android:letterSpacing="0.2"
            android:fontFamily="@font/productsans_bold"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:layout_marginBottom="24dp" />

        <!-- Butonlar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="16sp"
                android:textColor="@color/text_color_alt"
                android:fontFamily="@font/productsans_bold"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:fontFamily="@font/productsans_bold"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>